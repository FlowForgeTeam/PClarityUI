<div class="sidebar-container">
    <div class="sidebar-header"> 
        <span class="app-logo">
            {% include "../../assets/icons/pclarity-icon.svg" %}
        </span>
        {% if sidebarExpanded %}
            <span class="app-header">PClarity</span>
        {% endif %}
    </div>
    <div class="sidebar-content">
        <nav class="sidebar-nav">
            {% for item in navItems %}
                {% include "_sidebar_item.twig" with {item: item, sidebarExpanded: sidebarExpanded} %}
            {% endfor %}
        </nav>
        <div class="sidebar-footer">
            {% for item in footerItems %}
                {% include "_sidebar_item.twig" with {item: item, sidebarExpanded: sidebarExpanded} %}
            {% endfor %}
        </div>
    </div>
</div>